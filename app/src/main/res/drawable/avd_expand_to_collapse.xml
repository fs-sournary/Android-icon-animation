<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/ic_expand">

    <target android:name="group_chevron">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="250"
                android:interpolator="@android:interpolator/fast_out_slow_in"
                android:propertyName="translateY"
                android:valueFrom="9"
                android:valueTo="15" />
        </aapt:attr>
    </target>

    <target android:name="group_left">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="200"
                android:interpolator="@anim/interpolator_expand_collapse"
                android:propertyName="rotation"
                android:valueFrom="135"
                android:valueTo="45" />
        </aapt:attr>
    </target>

    <target android:name="group_right">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="200"
                android:interpolator="@anim/interpolator_expand_collapse"
                android:propertyName="rotation"
                android:valueFrom="45"
                android:valueTo="135" />
        </aapt:attr>
    </target>

</animated-vector>
