<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/checkableButton"
            style="@style/Widget.IconAnimation.Main.Button"
            android:layout_marginTop="32dp"
            android:text="@string/checkable" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clockButton"
            style="@style/Widget.IconAnimation.Main.Button"
            android:layout_marginTop="8dp"
            android:text="@string/clock" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/animalButton"
            style="@style/Widget.IconAnimation.Main.Button"
            android:layout_marginTop="8dp"
            android:text="@string/animal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/countUpButton"
            style="@style/Widget.IconAnimation.Main.Button"
            android:layout_marginTop="8dp"
            android:text="@string/count_up" />
    </LinearLayout>

</ScrollView>
